

<div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card card-outline-info">
                  <div class="card-header">
                    <h4 class="m-b-0 text-white" style="text-align: center;">Estadio</h4>
                  </div>
                  <div class="card-body">
                      <h3 class="card-title m-t-15" style="text-align: center;">Información</h3>
                      <hr>
                        <div class="form-group" align="center">
                          <strong style="color: #1976d2;">Fase:</strong>
                          <%= @calendar.fase %>
                        </div>
                        <div class="form-group" align="center">
                          <strong style="color: #1976d2;">Fecha:</strong>
                          <%= @calendar.fecha %>
                        </div>

                        <div class="form-group" align="center">
                          <strong style="color: #1976d2;">Hora:</strong>
                          <%= @calendar.hora.strftime("%H:%M") %>
                        </div>

                        <div class="form-group" align="center">
                          <strong style="color: #1976d2;">Estadio:</strong>
                          <%= @calendar.stadium %>
                        </div>
                      <div class="form-group" align="center">
                        <%= link_to edit_calendar_path(@calendar), class: 'btn btn-warning' do%>
                          <i class="fa fa-pencil"></i>
                          Editar
                      <%end%>
                      <%= link_to calendars_path, class: 'btn btn-danger' do%>
                          <i class="fa fa-angle-left"></i>
                          Atrás
                      <%end%>
                      </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
