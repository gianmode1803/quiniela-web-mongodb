<% if user_signed_in? == false || current_user.admin == false%>
    <h1><font color="#000000">Lo sentimos pero esta pantalla es s√≥lo para administradores</h1>
<% else user_signed_in? && current_user.admin  %>

    <%= simple_form_for(@coach) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="row justify-content-center">
      <div class="col-lg-6">
          <div class="login-content card">
              <div class="form-inputs">
                <%= f.input :nombre %>
                <%= f.input :apellido %>
                <%= f.input :apodo %>
                <%= f.input :fecha_nacimiento %>
                <%= f.input :ciudad_nacimiento %>
              </div>

              <div class="form-actions">
                <%= f.button :submit %>
              </div>
          </div>
      </div>
    </div
    <% end %>
<% end %>
