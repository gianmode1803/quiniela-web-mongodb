<p id="notice"><%= notice %></p>

<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="login-content card">
      
      <p style="color:DarkSlateGray; font-family:courier; font-size:250%;">
        <strong><%= @coach.nombre + " " + @coach.apellido%></strong>
      </p>

      <p style="color:DarkSlateGray; font-family:courier; font-size:150%;">
        <strong>Apodo:</strong>
        <%= @coach.apodo %>
      </p>

      <p style="color:DarkSlateGray; font-family:courier; font-size:150%;">
        <strong>Fecha nacimiento:</strong>
        <%= @coach.fecha_nacimiento.strftime("%d/%m/%Y") %>
      </p>

      <p style="color:DarkSlateGray; font-family:courier; font-size:150%;">
        <strong>Ciudad nacimiento:</strong>
        <%= @coach.ciudad_nacimiento %>
      </p>
      <% if user_signed_in? && current_user.admin%>
        <p><font color = "#000000">
          <%= link_to 'Editar', edit_coach_path(@coach) %> 
          <%= link_to 'Borrar', @coach, method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %>
        </p>
      <% end %>
    </div>
  </div>
</div>

