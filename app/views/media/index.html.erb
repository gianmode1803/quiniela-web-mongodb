<div class="table-responsive">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <table class="table table-hover table-bordered" cellpadding="15">
        <thead >
          <tr align="center">
            <th>Url</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Fecha</th>
            <th>Descripcion</th>
            <th colspan="3">Seleciona lo que desee hacer</th>
          </tr>
        </thead>

        <tbody>
          <% @media.each do |medium| %>
            <tr>
              <td><img src="<%= medium.url %>" height="140%" width="80%"></td>
              <td><%= medium.nombre %></td>
              <td><%= medium.tipo %></td>
              <td><%= medium.fecha %></td>
              <td><%= medium.descripcion %></td>
              <td><%= link_to 'Mostrar', medium %></td>
              <td><%= link_to 'Editar', edit_medium_path(medium) %></td>
              <td><%= link_to 'Borrar', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
