                           
<div class="unix-login">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-4">
                        <div class="login-content card">
                            <div class="login-form">



                            <h2 align="center">EDITAR PERFIL</h2>
                            
                            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put                            }) do |f| %>
                             <%= f.error_notification %>

                             

                               <%= f.input :email,label:'Correo', required: true, autofocus: true, maxlength:25 %>

                               <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                 <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                               <% end %>

                                            <%= f.input :password, autocomplete: "off", hint: "déjalo en blanco si no quieres cambiar esto", required: false, maxlength:20 %>
                                            <%= f.input :password_confirmation, required: false, maxlength:20 %>
                                            <%= f.input :current_password, hint: "necesitamos tu contraseña actual para confirmar los cambios", required:true, maxlength:20 %>
                                 <div class="form-group">
                                            <%= f.input :nombre, label: "Nombre", required: true, autofocus: true,maxlength:20 %>
                                 </div>    
                                 <div class="form-group">
                                            <%= f.input :apellido, label: "Apellido", required: true, autofocus: true,maxlength:20 %>
                                 </div>    
                                 <div class="form-group">
                                            <%= f.input :telefono, label: "Telefono", required: true, autofocus: true, maxlength:11,placeholder:"Ejemplo: 04146219347"%>
                                 </div>
                                 <div class="form-group"> 
                                                 <label>Fecha de nacimiento:</label>        
                                                <%= f.date_field :nacimiento, max:'2010-01-01',min:'1900-01-01',value: '2010-01-01'%>
                                 </div>  

                                  <div class="form-group">
                                            <%= f.input :postal, required: true, autofocus: true,as: :string,maxlength:4,placeholder:"Ejemplo: 1021"%>
                                  </div>
                                  <div class="form-group">
                                            <%= f.input :twitter, label: "Twitter",  autofocus: true,maxlength:30 %>
                                  </div>
                                  <div class="form-group">
                                            <%= f.input :instagram, label: "Instagram",  autofocus: true,maxlength:30%>
                                  </div>
                                  <div class="form-group">
                                            <%= f.input :facebook, label: "Facebook",  autofocus: true,maxlength:30 %>
                                  </div>

                              

                              <div class="form-actions">
                                <%= f.button :submit, "ACTUALIZAR", class: 'btn btn-primary btn-flat m-b-30 m-t-30 col-md-12' %>
                              </div>
                            <% end %>

                            
                            <%= link_to "REGRESAR", usuario_plantillas_index_path if resource.admin == false  %>
                            <%= link_to "REGRESAR", administrator_plantillas_index_path if resource.admin?  %>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>